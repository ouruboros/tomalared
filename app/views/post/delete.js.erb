<% if flash[:notice] %>
	$("#main").prepend("<div id=\"notice\"><%=flash[:notice]%></div>");
	$("#notice").fadeIn("fast", function(){
		setTimeout(function() {
			$("#notice").remove();
		}, 2000);
	});
<% end %>
<% if flash[:error] %>
	$("#main").prepend("<div id=\"error\"><%=flash[:error]%></div>");
	$("#error").fadeIn("fast", function(){
		setTimeout(function() {
			$("#error").remove();
		}, 2000);
	});
<% end %>
/* Eliminate the comment by fading it out */
if($('#post_<%= @post.id %>').length > 0)
	$('#post_<%= @post.id %>').remove();
/* Replace the count of comments */
if($('#posts_count').length > 0)
	$("#posts_count").html("<%= pluralize(Post.count, 'posts') %>");