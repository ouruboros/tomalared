/* Reset the comment form */
resetForm($("#save"));
/* Replace the count of comments */
if($("#posts_count").length > 0){
	$("#posts_count").html("<%= pluralize(Post.count, 'posts') %>");
}
/* Add the new comment to the bottom of the comments list */
if($("#posts").length > 0){
	var url = $(location).attr('protocol') + "//" + $(location).attr('host') + $(location).href();
	if($("#remote").length > 0)
		url = $("#remote").val();
	if(url.indexOf("/post/") != -1){
		$.getScript(url + "?notif=true&remote=true&postId=<%=@post.id%>");
		exitoPost("#post_<%=@post.id%> ");
	}
}