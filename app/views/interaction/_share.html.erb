<% if current_user.interactions.where(:post_id => post_id, :int_type => Interaction::I_SHARE).count >= 1 %>
		<%= link_to '&#10060;'.html_safe, {:controller => :interaction, :action => 'share', :post_id => post_id}, :remote => true, :class => 'iconUnshare', :title => 'UnShare'%>
<% else %>
    	<%= link_to '&#59196;'.html_safe, {:controller => :interaction, :action => 'share', :post_id => post_id}, :remote => true, :class => 'iconShare', :title => 'Share'%>
<% end %> 