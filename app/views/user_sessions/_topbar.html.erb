		<% end %>
	   	<span id="resultado-busqueda"></span>
	</div>
	
	<div class="searcheb">	
		<%= render :partial => "user_sessions/notifications.html.erb" %>
	</div>	
	
<% else -%>
	<div class="searcher">	
		<%= render :partial => "user_sessions/new" %>
	</div>	
<% end -%>