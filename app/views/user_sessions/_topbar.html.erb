<div class="titulo">	
	<%= link_to "#{t'tomalared_net'}", '/', :class => "linkRemote titulo"  %>
</div>

<% if current_user -%>
	<div class="searched">	
		<%= render :partial => "post/newex" %>
		<%= link_to ('&#9881;').html_safe, '/home', :class => "linkRemote", :title => "#{t'editar_perfil'}" %>  
		<%= link_to ('&#59201;').html_safe, '/logout', :title => "#{t'salir'}" %>	
		<div class='popbox fotoTopbar '>
			<%= link_to image_tag(current_user.photo.url(:small) , :alt => "Tu imagen"), '/post/user', :class => "linkRemote" %>		
		</div>
	</div>
	
	<div class="searchef">
		<%= form_tag('/search', :id => 'search', :method=> 'get', :remote => true) do %>   		
