<% if flash[:notice] %>
	$("#main").prepend("<div id=\"notice\"><%=flash[:notice]%></div>");
	$("#notice").fadeIn("fast", function(){
		setTimeout(function() {
			$("#notice").remove();
		}, 2000);
	});
<% end %>
<% if flash[:error] %>
	$("#main").prepend("<div id=\"error\"><%=flash[:error]%></div>");
	$("#error").fadeIn("fast", function(){
		setTimeout(function() {
			$("#error").remove();
		}, 2000);
	});
<% end %>
/* Eliminate the comment by fading it out */
if($('#post_<%=@comment.post_id %>').length > 0)
	$('#post_<%=@comment.post_id %>').find('#comment_<%=@comment.id %>').remove();